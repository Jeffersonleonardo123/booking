<h1>Listing Professionals</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Address</th>
      <th>Complement</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Active</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.fullname %></td>
        <td><%= professional.address %></td>
        <td><%= professional.complement %></td>
        <td><%= professional.neighborhood %></td>
        <td><%= professional.city %></td>
        <td><%= professional.state %></td>
        <td><%= professional.zip %></td>
        <td><%= professional.phone %></td>
        <td><%= professional.active %></td>
        <td><%= professional.company.name %></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

